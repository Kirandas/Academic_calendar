<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jcub.academic_calendar">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Academic Calendar"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".month_view.month_view"
            android:label="Academic Calendar"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".week_view.week_view"
            android:label="Week View"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".trimester_list"
            android:label="@string/title_activity_trimester_list"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
